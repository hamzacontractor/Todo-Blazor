
@using System.Threading
@using Models


@page "/"
@inject Blazored.LocalStorage.ILocalStorageService localStore


@if (Data.Todo != null)
{
    <div class="container" @onkeypress="CheckKeyPress">

        <div class="row">
            <div class="col-sm-12 col-md-10 col-lg-8 mx-auto">
                <div class="row pt-3 pb-2" style="background-color: rgb(var(--code-primary)); position:sticky; position:-webkit-sticky; z-index:11; top:0">
                    <div class="col-12 justify-content-center">
                        <DateTimeComponant />
                    </div>
                    <div class="col-12 mt-4 mb-2">
                        <div class="d-flex justify-content-center">
                            <SelectCatagory />
                            <button class="btn btn-outline-light ml-5 mt-auto" @onclick="(() => { Data.ShowCatagory = true; })">New</button>
                        </div>
                        @if (Data.ShowCatagory)
                        {
                            <div class="row my-2 p-3 position-relative" style="box-shadow: 1px 2px 3px 1px currentcolor, inset 1px 2px 3px 1px currentcolor">
                                <AddCatagory />
                            </div>
                        }
                    </div>
                    <div class="col-12 todo-input-container bg-white">
                        <input type="text" name="txtTodo" @bind="@Data.Todo.Text" @bind:event="oninput" placeholder="Todo" class="w-100 todo-input" />
                    </div>
                    <div class="col-12 text-white text-right" style="font-size:10px">Press Enter to add Todo.</div>
                </div>

                <div class="row p-3"><TodoCatagory /></div>

            </div>
        </div>

    </div>
}


@code {

    protected override async Task OnInitializedAsync()
    {
        var timer = new Timer(new TimerCallback(x =>
        {
            this.StateHasChanged();
        }), DateTime.Now, 100, 100);

        if (await localStore.ContainKeyAsync("displayed"))
        {
            Data.Displayed = await localStore.GetItemAsync<List<TodoCatagoryModel>>("displayed");
        }
        else
        {
            await localStore.SetItemAsync("displayed", Data.Displayed);
        }

        if (await localStore.ContainKeyAsync("stored"))
        {
            Data.Stored = await localStore.GetItemAsync<List<TodoCatagoryModel>>("stored");
        }
        else
        {
            await localStore.SetItemAsync("stored", Data.Stored);
        }

        await base.OnInitializedAsync();
    }

    private async Task AddTodo()
    {
        if (Data.Todo.Text != "" && Data.Todo.CatagoryName != "")
        {
            Data.Todo.TimeAdded = DateTime.Now.AddHours(5.5);
            Data.Displayed
                .Find(x => x.Name == Data.Todo.CatagoryName)
                .Todos.Add(Data.Todo);

            await localStore.SetItemAsync("displayed", Data.Displayed);

            Data.Todo = new TodoClass();
        }
    }

    private async Task CheckKeyPress(KeyboardEventArgs args)
    {
        switch (args.Key)
        {
            case "Enter":
                await AddTodo();
                break;

            default:
                return;
        }
    }

    private void ShowAddCatagory()
    {
        Data.ShowCatagory = true;
    }
}














